{
  "expo": {
    "name": "TripMate",
    "slug": "trip-mate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tripmate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tripmate.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "TripMate a besoin d'accéder à la caméra pour prendre des photos de voyage.",
        "NSPhotoLibraryUsageDescription": "TripMate a besoin d'accéder à vos photos pour les ajouter à votre journal de voyage.",
        "NSPhotoLibraryAddUsageDescription": "TripMate a besoin d'enregistrer des photos dans votre bibliothèque."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "useNextNotificationsApi": true,
      "package": "com.tripmate.app",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "color": "#2563eb"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "AUTO_GENERATED"
      }
    },
    "owner": "TON_USERNAME_EXPO"
  }
}
